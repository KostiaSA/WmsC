{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": false,
    "jsx": "react",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": false,
    "noImplicitAny": true,
    "removeComments": false,
    "noLib": false,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "build",
    "strictNullChecks": true
  },
  "compileOnSave": true,
  "buildOnSave": true,
  "exclude": [
    "typings/browser.d.ts",
    "typings/browser",
    "node_modules",
    "app/core",
    "app/scenes",
    "app/App.ts",
    "app/AppStart.tsx"
  ]
}
